<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="02-create-tables" author="Daler Yunusov">
        <!-- Create sequences -->
        <createSequence sequenceName="users_id_seq" schemaName="coworking_service"/>
        <createSequence sequenceName="resources_id_seq" schemaName="coworking_service"/>
        <createSequence sequenceName="bookings_id_seq" schemaName="coworking_service"/>

        <!-- Create tables -->
        <createTable tableName="users" schemaName="coworking_service">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement columnName="id"
                          tableName="users"
                          schemaName="coworking_service"
                          startWith="2"
                          incrementBy="1"/>

        <createTable tableName="resources" schemaName="coworking_service">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement columnName="id"
                          tableName="resources"
                          schemaName="coworking_service"
                          startWith="1"
                          incrementBy="1"/>

        <createTable tableName="bookings" schemaName="coworking_service">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="resource_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addAutoIncrement columnName="id"
                          tableName="bookings"
                          schemaName="coworking_service"
                          startWith="1"
                          incrementBy="1"/>
    </changeSet>

</databaseChangeLog>